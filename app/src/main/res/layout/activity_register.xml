<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="454dp"
        android:layout_height="807dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/movies" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="315dp"
        android:layout_height="646dp"
        android:layout_marginBottom="44dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/register"
            android:layout_width="139dp"
            android:layout_height="67dp"
            android:layout_below="@+id/cp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="61dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:background="@drawable/round_button_grey"
            android:text="REGISTER"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewname"
            android:layout_width="171dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="-26dp"
            android:layout_marginRight="-26dp"
            android:layout_toStartOf="@+id/name"
            android:layout_toLeftOf="@id/name"
            android:gravity="center"
            android:text="Name: "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewname"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_toStartOf="@+id/email"
            android:layout_toLeftOf="@+id/email"
            android:gravity="center"
            android:text="Email: "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewname3"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewname2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_toStartOf="@+id/phone"
            android:layout_toLeftOf="@id/phone"
            android:gravity="center"
            android:text="Phone No: "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewname4"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textViewname3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_toStartOf="@+id/pass"
            android:layout_toLeftOf="@+id/pass"
            android:gravity="center"
            android:text="Password:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewname5"
            android:layout_width="116dp"
            android:layout_height="61dp"
            android:layout_below="@+id/textViewname4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_toStartOf="@+id/cp"
            android:layout_toLeftOf="@+id/cp"
            android:gravity="center"
            android:text="Confirm Password:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="194dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:text="REGISTER"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="222dp"
            android:layout_height="27dp"
            android:layout_below="@+id/register"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="540dp"
            android:text="Don't Have an Account?"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login"
            android:layout_width="184dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="38dp"
            android:background="@android:drawable/screen_background_light_transparent"
            android:soundEffectsEnabled="false"
            android:text="CLICK HERE TO LOGIN"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email"
            android:layout_width="138dp"
            android:layout_height="36dp"
            android:layout_below="@+id/name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/design_default_color_background"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="136dp"
            android:layout_height="36dp"
            android:layout_below="@+id/email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="131dp"
            android:layout_height="34dp"
            android:layout_below="@+id/phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:background="@color/design_default_color_on_primary"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/cp"
            android:layout_width="131dp"
            android:layout_height="34dp"
            android:layout_below="@+id/pass"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:background="@color/design_default_color_on_primary"
            android:ems="10"
            android:inputType="textPassword" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="LIGHT'S OUT"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo_black"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>