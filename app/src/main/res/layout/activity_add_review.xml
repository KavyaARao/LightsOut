<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReview">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="454dp"
        android:layout_height="807dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/movies80" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="315dp"
        android:layout_height="646dp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/add"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textViewmname5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/back"
            android:layout_toRightOf="@+id/back"
            android:background="@drawable/round_button_grey"
            android:text="ADD REVIEW"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewmname4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/round_button_grey"
            android:text="BACK"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewmname"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:text="Name of the movie: "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewmname2"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mname"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:text="Author:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewmname3"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:gravity="center"
            android:text="Review:"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewmname4"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rev"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="Rate: "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textViewmname5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rev"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="77dp"
            android:layout_marginRight="77dp"
            android:gravity="center"
            android:text="/5"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="194dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:gravity="center"
            android:text="ADD Review"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            app:fontFamily="@font/candal" />

        <TextView
            android:id="@+id/mname"
            android:layout_width="281dp"
            android:layout_height="43dp"
            android:layout_below="@+id/textViewmname"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:text="Movie Name"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author"
            android:layout_width="283dp"
            android:layout_height="39dp"
            android:layout_below="@+id/textViewmname2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/design_default_color_background"
            android:ems="10"
            android:gravity="start|top"
            android:text="Email"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/rev"
            android:layout_width="280dp"
            android:layout_height="139dp"
            android:layout_below="@+id/textViewmname3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/design_default_color_background"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/rate"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rev"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toStartOf="@+id/textViewmname5"
            android:layout_toLeftOf="@+id/textViewmname5"
            android:background="@color/design_default_color_background"
            android:ems="10"
            android:inputType="text" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="LIGHT'S OUT"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo_black"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>